<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Console colorido -->
    <appender name="COLORED_CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{dd-MM-yyyy HH:mm:ss} %yellow(%-25.25thread) - %highlight(%-5level) [%cyan(FleetCARE)] - %magenta(%-30.30class{0}) - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- NÃ­vel global -->
    <root level="INFO">
        <appender-ref ref="COLORED_CONSOLE" />
    </root>

    
</configuration>
